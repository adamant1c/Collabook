# ========================================
# Security Configuration
# ========================================
SECRET_KEY=change-me-in-production-generate-with-openssl

# Environment (development or production)
ENVIRONMENT=development

# ========================================
# LLM Configuration (Choose ONE option)
# ========================================

# LLM Provider (ollama or gemini or openai)
LLM_PROVIDER=ollama
OLLAMA_MODEL=gemma3:latest
#GEMINI_API_KEY=your-api-key-here
#OPENAI_API_KEY=your-api-key-here

# Content Moderation (Phase 6)
CONTENT_FILTER_LEVEL=moderate  # strict, moderate, or relaxed
LOG_VIOLATIONS=true

# Language (Phase 7)
LANGUAGE=en  # en or it

# ========================================
# Database Configuration
# ========================================
DATABASE_URL=postgresql://postgres:postgres@db:5432/collabook
POSTGRES_PASSWORD=postgres

# ========================================
# Redis Configuration
# ========================================
REDIS_URL=redis://redis:6379

# ========================================
# Backend Configuration
# ========================================
BACKEND_URL=http://backend:8000

# ========================================
# Email Configuration (SMTP)
# ========================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_SENDER=noreply@collabook.com

# ========================================
# AdSense Configuration
# ========================================
# Set to True when site is approved by Google AdSense
# Default: False (ads disabled in development)
ADSENSE_ENABLED=False
